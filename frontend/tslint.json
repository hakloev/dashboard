{
    "extends": [
        "tslint:latest",
        "tslint-react"
    ],
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "indent": [
            true,
            "spaces",
            4
        ],
        "member-access": false,
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "no-submodule-imports": [
            true,
            "moment/locale/nb"
        ],
        "arrow-parens": false,
        "jsx-no-multiline-js": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    }
}
